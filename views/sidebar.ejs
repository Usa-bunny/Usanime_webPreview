<!-- =========================
     SIDEBAR CSS
========================= -->
<style>
  /* Sidebar Layout */
  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: 250px;
    height: 100%;
    background: #1c1c1c;
    color: #fff;
    padding: 22px 18px;
    overflow-y: auto;
    z-index: 1000;
    box-shadow: 2px 0 12px rgba(0,0,0,0.3);
    transition: transform .25s ease;
  }

  .sidebar-title {
    font-size: 1.7rem;
    margin-bottom: 25px;
    font-weight: 700;
  }

  .sidebar-nav ul {
    list-style: none;
    padding: 0;
  }

  .sidebar-nav ul li {
    margin-bottom: 14px;
  }

  .sidebar-nav ul li a {
    text-decoration: none;
    color: #ddd;
    padding: 10px 12px;
    display: block;
    font-size: 1.05rem;
    border-radius: 8px;
    transition: .25s;
  }

  .sidebar-nav ul li a:hover {
    background: #333;
    color: #fff;
  }

  /* Logout button */
  .logout-form button {
    margin-top: 20px;
    width: 100%;
    padding: 10px;
    background: #d63031;
    border: none;
    font-size: 1.05rem;
    color: #fff;
    border-radius: 8px;
    cursor: pointer;
    transition: .25s;
  }

  .logout-form button:hover {
    background: #c62828;
  }

  /* Mobile Sidebar */
  @media (max-width: 767px) {
    .sidebar {
      transform: translateX(-100%);
    }
    .sidebar.active {
      transform: translateX(0);
    }

    .sidebar-toggle {
      position: fixed;
      top: 15px;
      left: 15px;
      z-index: 1100;
      background: #1c1c1c;
      color: #fff;
      border: none;
      padding: 8px 11px;
      font-size: 1.6rem;
      border-radius: 6px;
      cursor: pointer;
    }

    .sidebar-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.5);
      z-index: 999;
    }

    .sidebar-overlay.active {
      display: block;
    }
  }

  /* Desktop: Sidebar always visible */
  @media (min-width: 768px) {
    .sidebar-toggle,
    .sidebar-overlay {
      display: none !important;
    }
  }
</style>



<!-- =========================
     SIDEBAR SCRIPT
========================= -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const sidebarToggle = document.querySelector(".sidebar-toggle");
    const sidebar = document.querySelector(".sidebar");
    const sidebarOverlay = document.querySelector(".sidebar-overlay");

    if (sidebarToggle) {
      sidebarToggle.addEventListener("click", () => {
        sidebar.classList.toggle("active");
        sidebarOverlay.classList.toggle("active");
      });
    }

    // Klik overlay = tutup sidebar
    sidebarOverlay.addEventListener("click", () => {
      sidebar.classList.remove("active");
      sidebarOverlay.classList.remove("active");
    });

    // Tutup sidebar saat link diklik (mobile)
    if (window.innerWidth <= 767) {
      const links = sidebar.querySelectorAll("a");
      links.forEach(link => {
        link.addEventListener("click", () => {
          sidebar.classList.remove("active");
          sidebarOverlay.classList.remove("active");
        });
      });
    }

    // Reset jika resize ke desktop
    window.addEventListener("resize", () => {
      if (window.innerWidth > 767) {
        sidebar.classList.remove("active");
        sidebarOverlay.classList.remove("active");
      }
    });
  });
</script>
