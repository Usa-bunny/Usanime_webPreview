<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daftar Anime</title>

  <!-- BOOTSTRAP -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <link rel="stylesheet" href="/css/style.css">

  <style>
    /* KONTEN BERGESER KETIKA DESKTOP */
    @media (min-width: 768px) {
      .content-with-sidebar {
        margin-left: 260px; /* menyesuaikan lebar sidebar */
      }
    }

    /* KARTU ANIME */
    .anime-card {
      border-radius: 12px;
      overflow: hidden;
      background: #fff;
      transition: .25s;
      border: 1px solid #ddd;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      text-decoration: none;
      color: inherit;
      display: block;
    }

    .anime-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.15);
    }

    .anime-img {
      width: 100%;
      height: 400px;
      object-fit: cover;
    }

    .anime-title {
      padding: 12px;
      font-size: 1rem;
      font-weight: 700;
      text-align: center;
      min-height: 50px;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .rating-badge {
      position: absolute;
      top: 10px;
      right: 10px;
      background: rgba(0,0,0,.7);
      color: #ffd700;
      padding: 5px 10px;
      border-radius: 8px;
      font-size: .85rem;
      font-weight: 600;
    }
  </style>
</head>

<body class="anime-body">

  <!-- SIDEBAR DI SINI -->
  <%- include('sidebar') %>

  <!-- WRAPPER KONTEN -->
  <div class="content-with-sidebar">

    <div class="container py-4">

      <!-- HEADER -->
      <div class="text-center mb-4">
        <h1 class="fw-bold">Daftar Anime</h1>
        <p class="text-muted">Jelajahi koleksi anime terbaik kami</p>
      </div>

      <!-- GRID -->
      <div class="row g-4">

        <% animeList.forEach(anime => { %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">

            <a href="/usanime/<%= anime._id %>" class="anime-card">

              <div class="position-relative">
                <img src="<%= anime.cover %>" class="anime-img" alt="<%= anime.title %>">
                <span class="rating-badge">‚≠ê <%= anime.rating %></span>
              </div>

              <div class="anime-title">
                <%= anime.title %>
              </div>

            </a>

          </div>
        <% }) %>

      </div>

    </div>

  </div>

</body>
</html>
