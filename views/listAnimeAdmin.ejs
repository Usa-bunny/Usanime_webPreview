<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Kelola Anime</title>

  <!-- BOOTSTRAP -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <link rel="stylesheet" href="/css/style.css">

  <style>
    /* KONTEN BERGESER KETIKA DESKTOP */
    @media (min-width: 768px) {
      .content-with-sidebar {
        margin-left: 260px;
      }
    }

    /* KARTU ANIME (SAMA PERSIS SEPERTI PAGE DAFTAR ANIME) */
    .anime-card {
      border-radius: 12px;
      overflow: hidden;
      background: #fff;
      transition: .25s;
      border: 1px solid #ddd;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      text-decoration: none;
      color: inherit;
      display: block;
    }

    .anime-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.15);
    }

    .anime-img {
      width: 100%;
      height: 400px;
      object-fit: cover;
    }

    .anime-title {
      padding: 12px;
      font-size: 1rem;
      font-weight: 700;
      text-align: center;
      min-height: 50px;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .anime-info-box {
      padding: 15px;
      font-size: 0.9rem;
    }

    .anime-actions a {
      width: 48%;
    }

    .anime-synopsis {
      max-height: 70px;
      overflow: hidden;
      text-overflow: ellipsis;
    }

  </style>
</head>

<body class="anime-body">

  <!-- SIDEBAR -->
  <%- include('sidebar') %>

  <!-- WRAPPER KONTEN -->
  <div class="content-with-sidebar">

    <div class="container py-4">

      <!-- HEADER -->
      <div class="text-center mb-4">
        <h1 class="fw-bold">Kelola Anime</h1>
        <p class="text-muted">Kelola koleksi anime Anda</p>
      </div>

      <!-- GRID -->
      <div class="row g-4">

        <% animeList.forEach(anime => { %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">

            <div class="anime-card">

              <!-- COVER GAMBAR -->
              <img src="<%= anime.cover %>" class="anime-img" alt="<%= anime.title %>">

              <!-- TITLE -->
              <div class="anime-title">
                <%= anime.title %>
              </div>

              <!-- INFO TAMBAHAN -->
              <div class="anime-info-box">
                <p class="mb-1"><strong>‚≠ê Rating:</strong> <%= anime.rating %>/10</p>
                <p class="mb-1"><strong>üè∑Ô∏è Genre:</strong> <%= anime.genre.join(", ") %></p>
                <p class="mb-1"><strong>üé¨ Episode:</strong> <%= anime.episodes %></p>
                <p class="anime-synopsis"><strong>üìñ Sinopsis:</strong> <%= anime.synopsis %></p>
              </div>

              <!-- ACTION BUTTONS -->
              <div class="d-flex justify-content-between p-3 anime-actions">
                <a href="/usanime/edit/<%= anime._id %>" class="btn btn-primary">‚úèÔ∏è Update</a>
                <a href="/usanime/delete/<%= anime._id %>" class="btn btn-danger"
                   onclick="return confirm('Yakin ingin menghapus anime <%= anime.title %>?')">üóëÔ∏è Delete</a>
              </div>

            </div>

          </div>
        <% }) %>

      </div>

    </div>

  </div>

</body>
</html>
